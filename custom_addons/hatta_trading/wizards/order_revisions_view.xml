<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_revision_view_form" model="ir.ui.view">
        <field name="name">sale.order.revision.form</field>
        <field name="model">sale.order.revision</field>
        <field name="arch" type="xml">
            <form string="Sale Order Revision">
                <group>
                    <field name="order_reference" readonly="1"/>
                    <field name="revision_reason"/>
                </group>
                <footer>
                    <button name="action_sale_order_revision" string="Submit" type="object" default_focus="1"
                           class="oe_highlight" />
                   <button string="Cancel" type="object" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

